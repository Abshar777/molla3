<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body style="background-color: #212529; ">

    <section class="content-main " >
        <div class="content-header">
            <div>
                <h2 class="content-title card-title"></h2>

            </div>

        </div>
        <div class="card mb-4 border-0 " style="background-color: #212529; ">

            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col col-check flex-grow-0">

                    </div>
                    <div class="col-md-4 col-12 me-auto mb-md-0 mb-3">
                        <h2 style='color: #fff;' class="content-title card-title text-white "><%=locals.data  %> Sales Report</h2>
                    </div>

                    <div class="col-md-2 col-6">
                        <% if(locals.data) {%>
                        <!-- <form action="/admin/report/download/<%=data  %>" method="post"> -->
                       <a href="/admin/report/download/<%=data  %>"><button class="btn bg-danger text-white  " type="submit">Download</button></a>
                    <!-- </form> -->
                    <% } %>
                    </div>
                </div>
            </header>
            <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">

                    <div id="reloadDiv" style='color: #fff;'>
                        <table class="table table-dark table-bordered ">
                            <thead>
                                <tr>
                                    <th scope="col">NO</th>
                                    <th scope="col">Order Id</th>
                                    <th scope="col">Billing Name</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Payment</th>



                                </tr>
                            </thead>
                            <tbody>
                                <% locals.report.forEach((e,i)=>{ %>
                                    <tr>
                                        <td scope="col">
                                            <%= i+1 %>
                                        </td>
                                        <td scope="col">
                                            <%= e._id %>
                                        </td>
                                        <td scope="col">
                                            <%=e.deliveryAdress.name %>
                                        </td>
                                        <td scope="col">
                                            <%= e.orderDate.toString().split(' ').slice(0,4).join('  ') %>
                                        </td>
                                        <td scope="col">
                                            <%=e.orderAmount %>
                                        </td>
                                        <td scope="col">
                                            <%=e.peyment %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>





            </div>
            <!-- card-body end// -->
        </div>
        <!-- card end// -->







    </section>
    <% if(locals.data){ %>
    <style>
        body {
            padding: 2rem;
          
            background-color: #212529;
        }
    </style>
    <% } %>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

</html>
						submit.style.pointerEvents = 'all';
					} else {
						console.log('suckkk');
						submit.style.pointerEvents = 'none',
							submit.style.opacity = 0.5;
						e.style.border = '1px solid red';
						Pmsg.textContent = 'its week password please containe atleast 8 cherecters and it contain one number  and spellings'
					}
				}


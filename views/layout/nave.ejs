<header class="header header-6">

    <div class="header-middle">
        <div class="container">
            <div class="header-left">
                <div class="header-search header-search-extended header-search-visible d-none d-lg-block">
                    <a href="#" class="search-toggle" role="button"><i class="icon-search"></i></a>
                    <form action="#" method="get">
                        <div class="header-search-wrapper search-wrapper-wide d-flex align-items-center justify-content-center " >
                        
                            <i class="ri-search-line text-primary fs-1" style="font-size: 2rem;"></i>
                            <input type="search" class="form-control " style="border-radius: 0px; border-bottom: .5px solid rgba(0, 0, 0, 0.473);" name="q" id="q" placeholder="Search product ..." required>
                        </div><!-- End .header-search-wrapper -->
                    </form>
                </div><!-- End .header-search -->
            </div>
            <div class="header-center">
                <a href="/" class="logo">
                    <img src="/images/demos/demo-6/logo.png" alt="Molla Logo" width="82" height="20">
                </a>
            </div><!-- End .header-left -->
            <!-- // wishlist and cart -->
            <% if(locals.login) {%>
            <div class="header-right">
                <a href="/wishlist" class="wishlist-link">
                    <i class="icon-heart-o"></i>
                    <span class="wishlist-count">3</span>
                    <span class="wishlist-txt">My Wishlist</span>
                </a>

                <div  class=" cart-dropdown" >
                    <a  href="/cart" class="dropdown-toggle" 
                       >
                        <i class="icon-shopping-cart"></i>
                        <span class="cart-count">2</span>
                        <span class="cart-txt">Cart</span>
                    </a>

          <!-- End .dropdown-menu -->
                </div><!-- End .cart-dropdown -->
            </div>
            <% } %>
        </div>
    </div>

    <div class="header-bottom sticky-header">
        <div class="container">
            <div class="header-left">
                <nav class="main-nav">
                    <ul class="menu ">
                        <li class="megamenu-container ">
                            <a href="/" class="">Home</a>

                            <!-- End .megamenu -->
                        </li>
                        <li>
                            <a href="/shop" class="">Shop</a>

                            <!-- End .megamenu megamenu-md -->
                        </li>
                        <li>
                            <a  class="sf-with-ul">Category</a>
                            <ul>
                                <%locals.cetgory.forEach(e=>{%>
                                <li><a href="/cetgory/<%=e.name  %>"><%=e.name  %></a></li>
                                
                                <% }) %>
                            </ul>

                        </li>

                        <li>
                            <a href="/about">About</a>


                        </li>
                        <li>
                            
                            <a href="<%= locals.login ? '/profile' : '/login' %>" class=""><%= locals.login ? 'Profile' : 'Login' %></a>
                        </li>
                    </ul><!-- End .menu -->
                </nav><!-- End .main-nav -->

                <button class="mobile-menu-toggler">
                    <span class="sr-only">Toggle mobile menu</span>
                    <i class="icon-bars"></i>
                </button>
            </div><!-- End .header-left -->

            <div class="header-right">
                <i class="la la-lightbulb-o"></i>
                <p>Clearance Up to 30% Off</span></p>
            </div>
        </div><!-- End .container -->
    </div>
</header>

<script>
    function redirect(e){
        window.location.href = e;
    }
</script>
